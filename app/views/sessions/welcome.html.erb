<h1>Welcome</h1>

<% if logged_in? %>
<li>
    <strong>You are Logged In, <%= current_user.username%> </strong><br>
</li>

<%= %>

<table style="width:40%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Hashtag</th> 
      <th>Content creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<section>
  <tbody class="wave wave1, wave wave 2, wave 3">
    <% @videos.each do |video| %>
      <tr>
        <td> <%= image_tag(video.thumbnail) if video.thumbnail.attached? %><%= video.title %> </td>
        <td><%= video.hashtag %></td>
        <td><% video.user.username %></td>
        <td><%= link_to 'Show', video %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</section>

<%= link_to 'Upload New Videos', new_video_path %> 


